	<xs:simpleType name="imageType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="GIF" />
			<xs:enumeration value="PNG" />
			<xs:enumeration value="OTHER" />
		</xs:restriction>
	</xs:simpleType>

	<!-- DOCUMENT ROOT ELEMENT -->
	<xs:element name="gophermap" type="gopher:gophermap"/>
	
</xs:schema>
